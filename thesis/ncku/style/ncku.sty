    \newlength{\two@num}\settowidth{\two@num}{99.99...}
    \newlength{\three@num}\settowidth{\three@num}{99.99.99...}
    \newlength{\four@num}\settowidth{\four@num}{99.99.99.99...}
    \newlength{\five@num}\settowidth{\five@num}{99.99.99.99.99...}
